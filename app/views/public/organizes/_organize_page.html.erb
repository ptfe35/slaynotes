<%= content_tag "tr", id: "page-#{page.id}", class: "item", data: { model_name: page.class.name.underscore, update_url: page_sort_path(page)} do %>
<td>
</td>
<td>
  <%= link_to page_path(page) do %>
  <%= page.name %>
  <% end %>
</td>
<td><%= page.page_comments.count %></td>

<td>
<% if page.favorited_by?(current_end_user) %>
<div>
  <%= link_to page_page_favorites_path(page), method: :delete do %>
    <p class="fa fa-heart" aria-hidden="true" style="color: red;"></p>
    <%= page.page_favorites.count %> いいね
  <% end %>
</div>
<% else %>
<div>
  <%= link_to page_page_favorites_path(page), method: :post do %>
    <p class="fa fa-heart-o" aria-hidden="true"></p>
    <%= page.page_favorites.count %> いいね
  <% end %>
</div>
<% end %>
</td>

<% end %>