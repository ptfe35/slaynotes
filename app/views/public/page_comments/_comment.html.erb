<% page.page_comments.each do |page_comment| %>
<li class="comment">
  <div class="comment-body bb">
    <div class="comment-avatar">
    </div>
    <div class="comment-text">
      <div class="comment-author clearfix">
        <a href="#" class="link-author"><%= page_comment.end_user.name %></a>
        <span class="comment-meta">
          <span class="comment-date"><%= page_comment.created_at.strftime('%Y/%m/%d') %></span>
        </span>
      </div>
      <div class="comment-entry"><%= page_comment.comment %></div>
      <% if page_comment.end_user == current_end_user %>
      <div>
        <%= link_to "削除", page_page_comment_path(page_comment.page, page_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
      </div>
      <% end %>
    </div>
  </div>
</li>
<% end %>